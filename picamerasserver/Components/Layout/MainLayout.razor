@inherits LayoutComponentBase

<MyThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton
            Icon="@Icons.Material.Filled.Menu"
            Color="Color.Inherit"
            Edge="Edge.Start"
            OnClick="@(_ => DrawerToggle())"
            />
        Pi Cameras
    </MudAppBar>
    <MudDrawer
        @bind-Open="@_drawerOpen"
        ClipMode="DrawerClipMode.Always"
        Elevation="16"
        >
        <MyNavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    @* ReSharper disable once RedundantDefaultMemberInitializer *@
    private bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}