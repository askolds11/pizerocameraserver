@using picamerasserver.Components.Layout
<NotificationHandler/>

<MudContainer MaxWidth="MaxWidth.Large">

    <MudPaper MinHeight="@($"calc(100vh - {MyThemeProvider.MyCustomTheme.LayoutProperties.AppbarHeight} - 16px)")" Class="mt-4">
        <ErrorBoundary>
            <ChildContent>
                @ChildContent
            </ChildContent>
            <ErrorContent>
                <MudStack Style="width: 100%" Class="pa-4">
                    <MudText Typo="Typo.h3">
                        ðŸ˜ˆ Ruh roh! Something went wrong.
                    </MudText>
                    <MudText>
                        @context.ToString()
                    </MudText>
                </MudStack>
            </ErrorContent>
        </ErrorBoundary>
    </MudPaper>

</MudContainer>

@code {
    [Parameter, EditorRequired] public required RenderFragment ChildContent { get; set; }
}