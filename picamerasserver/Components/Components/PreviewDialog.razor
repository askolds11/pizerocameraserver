<MudDialog
    OnKeyDown="@OnKeyDown"
    Gutters="false"
    ContentClass="pa-0 ma-0"
    ContentStyle="display: flex; height: 100vh; width: 100vw; margin: 0; padding: 0;"
>
    <DialogContent>
        <MudStack Row="true">
            <MudImage
                Src="@PreviewStreamUrl"
                Alt="X"
                ObjectFit="ObjectFit.Contain"
                Fluid="true"
                Style="max-width: 100%; max-height: 100%;"
                Elevation="0"
                Class="pa-0 ma-0"/>
            <MudStack>
                <StatusTableAlt TooltipTransform="@_tooltipTransform" ColorTransform="@ColorTransform"/>


            </MudStack>
        </MudStack>
    </DialogContent>
</MudDialog>


@code {
    private RenderFragment<string> _tooltipTransform = _ => _ => { };
}